<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="name" type="text" class="form-control" placeholder="Ваше имя" value="<%= @name %>">
  </div>

   <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" placeholder="Ваш телефон" value="<%= @phone %>">
  </div>

     <div class="form-group">
    <label>Когда Вас ждать?</label>
    <input id="datetimepicker" name="datetime" type="text" class="form-control" placeholder="Введите дату и время" value="<%= @datetime %>">
  </div>

<%#= @barbers%>

<div class="form-group">
    <label>Ваш парикмахер:</label>
    <select name="barber" class="form-control" value="">
      <% @barbers.each do |row| %>
        <option <%= @barber == row['name'] ? 'selected' : '' %>><%= row['name'] %> </option>
      <% end %>
    </select>
  </div>


<button type="submit" class="btn btn-primary">Записаться</button>

